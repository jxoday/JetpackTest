<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_life_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_life_cycle"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_navigation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_view_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_view_model"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_live_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_live_data"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_live_data_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_live_data_fragment"
        android:textAllCaps="false"/>

</LinearLayout>